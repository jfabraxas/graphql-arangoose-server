{
  "name": "@jfa/graphql-arangoose-server",
  "description": "GraphQL Arangoose boilerplate",
  "version": "0.0.1",
  "dependencies": {
    "@jfa/arangoose": "0.0.1",
    "babel-polyfill": "^6.23.0",
    "bcrypt-as-promised": "^1.1.0",
    "dataloader": "^1.3.0",
    "dotenv-safe": "^4.0.3",
    "graphql": "^0.9.3",
    "graphql-relay": "^0.5.1",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^7.3.0",
    "koa": "^2.2.0",
    "koa-bodyparser": "^2.2.0",
    "koa-compose": "^4.0.0",
    "koa-convert": "^1.2.0",
    "koa-cors": "0.0.16",
    "koa-graphql": "^0.6.2",
    "koa-graphql-batch": "^1.1.0",
    "koa-logger": "^2.0.1",
    "koa-router": "^7.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "flow-bin": "^0.44.0",
    "jest": "19.0.2",
    "jest-cli": "19.0.2",
    "nodemon": "^1.10.2",
    "reify": "^0.7.4",
    "repl": "^0.1.3",
    "repl-promised": "^0.1.0",
    "repl.history": "^0.1.4",
    "rimraf": "^2.6.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "./dist"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "moduleNameMapper": {
      "^arangoose$": "<rootDir>/node_modules/arangoose"
    }
  },
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jfabraxas/graphql-arangoose-server"
  },
  "scripts": {
    "build": "npm run clear && babel src --ignore *.spec.js --out-dir dist --copy-files",
    "clear": "rimraf ./dist",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "lint": "eslint src/**",
    "repl": "nodemon --config ./repl/nodemon.json ./repl.js --exec babel-node",
    "start": "node dist/index.js",
    "test": "jest --coverage --forceExit --runInBand",
    "test:watch": "jest --watch --coverage",
    "update-schema": "babel-node ./scripts/updateSchema.js",
    "watch": "nodemon src/index.js --exec babel-node"
  }
}
